3.
SELECT DISTINCT nom , 'client' as type
from clients 
union 
SELECT DISTINCT nom , 'transporteur' as type 
from transporteurs 
union 
SELECT DISTINCT nom , 'fournisseur' as type
from fournisseurs
order by nom , type asc


4.
select c.Pays , c.nom , c.ville
from clients c
WHERE c.clientId not in (SELECT co.clientId
                    from commandes co)
order by 2 asc;

5.
select c.nom , c.nomContact , c.adresse , c.ville , c.Pays
from clients c
where c.nom in (SELECT f.nom
                     from fournisseurs f)

